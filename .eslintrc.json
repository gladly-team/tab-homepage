{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:react/recommended"
  ],
  "globals": {
    "window": true,
    "console": true,
    "module": true,
    "graphql": true,
    "require": true
  },
  "rules": {
    "no-console": "off",
    "react/no-unescaped-entities": "off"
  },
  "env": {
    "es6": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
